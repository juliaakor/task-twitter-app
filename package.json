{
  "name": "task-twitter-app",
  "private": true,
  "packageManager": "yarn@3.6.1",
  "engines": {
    "node": "18 || 20",
    "yarn": "3.6.1"
  },
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "clean": "rimraf ./build",
    "clean:npm": "rimraf ./node_modules",
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "lint": "npx eslint --max-warnings=0 --ignore-path .gitignore .",
    "lint:fix": "npx eslint --ignore-path .gitignore . --fix",
    "prettier": "prettier src --check --ignore-path .gitignore .",
    "prettier:fix": "prettier src --write --ignore-path .gitignore .",
    "test": "jest --watch",
    "test:all": "jest --watchAll",
    "test:ci": "jest --ci",
    "test:coverage": "rimraf ./coverage && jest --coverage && open coverage/lcov-report/index.html",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run"
  },
  "husky": {
    "hooks": {
      "commit-msg": "npx --no -- commitlint --edit $1",
      "pre-commit": "yarn lint && yarn prettier"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hookform/resolvers": "^3.9.0",
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.5",
    "firebase": "^10.13.1",
    "luxon": "^3.5.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.53.0",
    "react-redux": "^9.1.2",
    "react-router-dom": "^6.26.1",
    "redux": "^5.0.1",
    "redux-persist": "^6.0.0",
    "redux-saga": "^1.3.0",
    "styled-components": "^6.1.12",
    "yup": "^1.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-typescript": "^7.24.7",
    "@commitlint/cli": "^19.4.1",
    "@commitlint/config-conventional": "^19.4.1",
    "@redux-devtools/extension": "^3.3.0",
    "@types/jest": "^29.5.12",
    "@types/luxon": "^3.4.2",
    "@types/node": "^22.5.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/redux-immutable-state-invariant": "^2.1.4",
    "@vitejs/plugin-react": "^4.3.1",
    "cypress": "^13.14.1",
    "eslint": "^8.5.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-perfectionist": "^3.3.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "husky": "4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.3.3",
    "redux-immutable-state-invariant": "^2.1.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.16.1",
    "vite": "^5.4.1",
    "vite-tsconfig-paths": "^5.0.1"
  }
}
